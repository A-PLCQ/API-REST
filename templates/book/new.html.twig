<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>New Book</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h1>New Book</h1>
        {{ form_start(form) }}
            {{ form_errors(form) }}

            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title, { 'attr': {'class': 'form-control', 'placeholder': 'Enter book title'} }) }}
                {{ form_errors(form.title) }}
            </div>
            <div class="form-group">
                {{ form_label(form.author) }}
                {{ form_widget(form.author, { 'attr': {'class': 'form-control', 'placeholder': 'Enter author name'} }) }}
                {{ form_errors(form.author) }}
            </div>
            <div class="form-group">
                {{ form_label(form.publicationYear) }}
                {{ form_widget(form.publicationYear, { 'attr': {'class': 'form-control', 'placeholder': 'Enter publication year'} }) }}
                {{ form_errors(form.publicationYear) }}
            </div>
            <div class="form-group">
                {{ form_label(form.isbn) }}
                {{ form_widget(form.isbn, { 'attr': {'class': 'form-control', 'placeholder': 'Enter ISBN number'} }) }}
                {{ form_errors(form.isbn) }}
            </div>
            <div class="form-group">
                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary'} }) }}
            </div>
        {{ form_end(form) }}
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
